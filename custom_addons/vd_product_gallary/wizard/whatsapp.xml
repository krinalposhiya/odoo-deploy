<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <record id="view_whatsapp_wizard_form" model="ir.ui.view">
    <field name="name">whatsapp.wizard.form</field>
    <field name="model">whatsapp.wizard</field>
    <field name="arch" type="xml">
        <form string="Send WhatsApp Message">
            <group>
                <field name="phone_number"/>
                <field name="message"/>
            </group>
            <footer>
                <button string="Send" name="action_send_whatsapp" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

</odoo>
